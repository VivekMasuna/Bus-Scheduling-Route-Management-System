<% layout('/layouts/boilerplate') %>
<head>
    <link rel="stylesheet" href="/crew_signup.css">
</head>
<body>
    <div id="wrapper">
        <form class="form" action="/reset/<%= token %>" method="post">
            <p class="tittle">Reset Password </p>
            <label>
                <input class="input" type="password" name="password" id="password" placeholder="" required>
                <span>Password</span>
            </label>
            <label>
                <input class="input" type="password" name="confirm" id="password" placeholder="" required>
                <span>Confirm password</span>
            </label>
            <button type="submit" class="submit">Reset Password</button>
        </form>
    </div>
</body>
    