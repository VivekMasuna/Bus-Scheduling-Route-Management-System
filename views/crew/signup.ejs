<% layout('/layouts/boilerplate') %>

    <style>
        body {
            background: url('/bg.jpeg') no-repeat center center/cover;
        }

        .signup-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            margin: 40px 0;
        }

        .signup-box {
            background: rgba(0, 51, 102, 0.7);
            /* Applying the #003366 shade */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
            width: 350px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .signup-box h2 {
            margin-bottom: 30px;
            color: #fff;
            font-weight: 600;
        }

        .signup-box .input-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .signup-box .input-group label {
            display: block;
            color: #fff;
            margin-bottom: 8px;
            font-size: 16px;
            font-weight: 600;
        }

        .signup-box .input-group input,
        .signup-box .input-group select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 20px;
            background: #f0f0f0;
            font-size: 16px;
        }

        .signup-box .signup-button {
            width: 100%;
            padding: 12px;
            background: #66ccff;
            color: #003366;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-size: 18px;
            font-weight: 600;
        }

        .signup-box .signup-button:hover {
            background: #55bbff;
        }
    </style>

    <body>
        <div class="signup-container">
            <div class="signup-box">
                <h2>Sign Up</h2>
                <form method="post" action="/crew/signup">
                    <div class="input-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="input-group">
                        <label for="mobile">Mobile No:</label>
                        <input type="tel" id="mobile" name="mobile" required>
                    </div>
                    <div class="input-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="input-group">
                        <label for="address">Address:</label>
                        <input type="text" id="address" name="address" required>
                    </div>
                    <div class="input-group">
                        <label for="role">Role:</label>
                        <select id="role" name="role" required>
                            <option value="">Select Role</option>
                            <option value="Driver">Driver</option>
                            <option value="Conductor">Conductor</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <label for="depotLocation">Depot Location:</label>
                        <select id="depotLocation" name="depotLocation">
                            <option value="">Select Location</option>
                            <option value="Rohini Sec 22 Terminal">Rohini Sec 22 Terminal</option>
                            <option value="Azadpur Terminal">Azadpur Terminal</option>
                            <option value="Alipur Village GT Road">Alipur Village GT Road</option>
                            <option value="Old Delhi Railway Station">Old Delhi Railway Station</option>
                            <option value="Jharoda Metro Station">Jharoda Metro Station</option>
                            <option value="Shivaji Stadium Terminal">Shivaji Stadium Terminal</option>
                            <option value="Qutub Garh Village (T)">Qutub Garh Village (T)</option>
                            <option value="Bawana Soap Factory">Bawana Soap Factory</option>
                            <option value="Katewara Village">Katewara Village</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="input-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <!-- <div class="input-group">
                        <label for="confirmPassword">Confirm Password:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                    </div> -->
                    <button type="submit" class="signup-button">Sign Up</button>
                </form>
            </div>
        </div>
    </body>