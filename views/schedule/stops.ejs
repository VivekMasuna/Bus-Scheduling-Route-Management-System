<% layout('/layouts/boilerplate') %>

    <style>
        .manage {
            width: 70%;
            border-collapse: collapse;
            margin-bottom: 30px;
            background-color: white;
            border: 1px solid #ddd;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        th {
            background-color: #003366;
            color: white;
        }

        .route {
            cursor: pointer;
            background-color: #f9f9f9;
        }

        .route:hover {
            background-color: #f1f1f1;
        }

        .btn {
            background-color: #FFCC00;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            color: black;
            text-decoration: none;
        }

        .btn:hover {
            background-color: #e6b800;
        }

        @media (max-width: 768px) {

            th,
            td {
                font-size: 14px;
                padding: 8px;
            }
        }

        h2 {
            color: #ddd;
            border: 2px solid #002244;
            background-color: #002244;
            border-radius: 10px;
            /* margin: 30px 100px 30px 100px; */
            width: 50%;
            text-align: center;
        }

        .button1 {
            height: 40px;
            background-color: #FFCC00;
            border: #FFCC00;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            color: black;
            text-decoration: none;
            box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);
            margin: 0px 20px 20px 20px;
        }

        .button1:hover {
            background-color: #e6b800;
        }

        .button1 a {
            text-decoration: none;
            color: black;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            background-color: white;
            padding: 20px;
            padding-top: 0.2rem;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .attributes {
            margin: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .attributes h2 {
            margin: 0 0 10px;
            font-size: 24px;
            color: white;
        }

        .attributes p {
            margin: 5px 1.5rem;
            font-size: 18px;
        }

        .timings-table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        th {
            background-color: #003366;
            color: white;
        }

        .schedule-btn {
            background-color: #FFCC00;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            color: black;
            text-decoration: none;
        }

        .schedule-btn:hover {
            background-color: #e6b800;
        }

        .details p {
            display: inline-block;

        }

        .h3 {
            margin-bottom: 0;
        }

        @media (max-width: 768px) {

            th,
            td {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>

    <body>
        <div class="attributes">
            <h2>Route Details</h2>
            <div class="details">
                <p><strong>Route No:</strong>
                    <%= route[0].route_no %>
                </p>
                <p><strong>Origin:</strong>
                    <%= route[0].origin %>
                </p>
                <p><strong>Destination:</strong>
                    <%= route[0].destination %>
                </p>
            </div>
        </div>

        <div class="container">
            <h2>Stops</h2>
            <table class="timings-table">
                <thead>
                    <tr>
                        <th>Stop No.</th>
                        <th>Stop Name</th>
                        <th>Coordinates</th>
                        <th>Edit Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0;i<route[0].route_stops.length;i++) { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= route[0].route_stops[i].place %></td>
                            <td>Lat: <%= route[0].route_stops[i].lat %>, Long: <%= route[0].route_stops[i].lon %></td>
                            <td>
                                <a href="/admin/stops/edit/<%= route.route_no %>" class="btn" onclick="event.stopPropagation();">
                                    Edit Info
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

        </div>
    </body>