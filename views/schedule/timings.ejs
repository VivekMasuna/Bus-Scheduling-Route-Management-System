<% layout('/layouts/boilerplate') %>

    <style>
        .manage {
            width: 70%;
            border-collapse: collapse;
            margin-bottom: 30px;
            background-color: white;
            border: 1px solid #ddd;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        th {
            background-color: #003366;
            color: white;
        }

        .route {
            cursor: pointer;
            background-color: #f9f9f9;
        }

        .route:hover {
            background-color: #f1f1f1;
        }

        .btn {
            background-color: #FFCC00;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            color: black;
            text-decoration: none;
        }

        .btn:hover {
            background-color: #e6b800;
        }

        @media (max-width: 768px) {

            th,
            td {
                font-size: 14px;
                padding: 8px;
            }
        }

        h2 {
            color: #ddd;
            border: 2px solid #002244;
            background-color: #002244;
            border-radius: 10px;
            /* margin: 30px 100px 30px 100px; */
            width: 50%;
            text-align: center;
        }

        .button1 {
            height: 40px;
            background-color: #FFCC00;
            border: #FFCC00;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            color: black;
            text-decoration: none;
            box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);
            margin: 0px 20px 20px 20px;
        }

        .button1:hover {
            background-color: #e6b800;
        }

        .button1 a {
            text-decoration: none;
            color: black;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            background-color: white;
            padding: 20px;
            padding-top: 0.2rem;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .attributes {
            margin: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .attributes h2 {
            margin: 0 0 10px;
            font-size: 24px;
            color: white;
        }

        .attributes p {
            margin: 5px 1.5rem;
            font-size: 18px;
        }

        .timings-table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        th {
            background-color: #003366;
            color: white;
        }

        .schedule-btn {
            background-color: #FFCC00;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            color: black;
            text-decoration: none;
        }

        .schedule-btn:hover {
            background-color: #e6b800;
        }

        .details p {
            display: inline-block;

        }

        .h3 {
            margin-bottom: 0;
        }

        @media (max-width: 768px) {

            th,
            td {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>

    <body>
        <div class="attributes">
            <h2>Route Details</h2>
            <div class="details">
                <p><strong>Route No:</strong>
                    <%= route.route_no %>
                </p>
                <p><strong>Origin:</strong>
                    <%= route.origin %>
                </p>
                <p><strong>Destination:</strong>
                    <%= route.destination %>
                </p>
            </div>
        </div>

        <div class="container">
            <h2>Timings</h2>
            <table class="timings-table">
                <thead>
                    <tr>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Schedule</th>
                    </tr>
                </thead>
                <tbody>
                    <% route.schedule.forEach((schedule) => { %>
                        <tr>
                            <td><%= schedule.start_time %></td>
                            <td><%= schedule.end_time %></td>
                            <td>
                                <form action="/admin/schedule" method="POST">
                                    <input type="hidden" name="route_id" value="<%= route._id %>">
                                    <input type="hidden" name="start_time" value="<%= schedule.start_time %>">
                                    <input type="hidden" name="end_time" value="<%= schedule.end_time %>">
                                    <button type="submit" class="schedule-btn">Schedule</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <h2>Available Crew</h2>
            <h3 class="h3">Drivers</h3>
            <ul>
                <% availableDrivers.forEach(driver => { %>
                    <li><%= driver.name %> - Depot: <%= driver.depot_location %></li>
                <% }) %>
            </ul>

            <h3 class="h3">Conductors</h3>
            <ul>
                <% availableConductors.forEach(conductor => { %>
                    <li><%= conductor.name %> - Depot: <%= conductor.depot_location %></li>
                <% }) %>
            </ul>

            <h2>Available Buses</h2>
            <ul>
                <% availableBuses.forEach(bus => { %>
                    <li>Bus No: <%= bus.bus_no %> - Depot: <%= bus.current_location %></li>
                <% }) %>
            </ul>
        </div>
        <center>
            <div class="buttons">
                <button class="button1"><a href="/admin/routes/timing/new">Add new Timing</a></button>
                <button class="button1"><a href="/">Delete a Timing</a></button>
            </div>
        </center>
    </body>