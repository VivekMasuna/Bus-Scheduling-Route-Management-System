<% layout('/layouts/boilerplate') %>
<head>
    <link rel="stylesheet" href="/crew_signup.css">
</head>

<body>
    <div id="wrapper">
        <form action="/admin/request" class="form" method="post">
            <p class="tittle">Admin Request </p>
            <label>
                <input class="input" type="text" name="username" id="username" placeholder="" required>
                <span>Username</span>
            </label>
            <label>
                <input class="input" type="email" name="email" id="email" placeholder="" required="">
                <span>Email</span>
            </label>
            <label>
                <input class="input" type="password" name="password" id="password" placeholder="" required>
                <span>Password</span>
            </label>
            <button type="submit" class="submit">Send Request</button>
        </form>
    </div>
</body>