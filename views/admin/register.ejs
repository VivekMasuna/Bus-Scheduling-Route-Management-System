<% layout('/layouts/boilerplate') %>

    <style>
        body {
            background: url('/bg.jpeg') no-repeat center center/cover;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            margin: 40px 0;
        }

        .login-box {
            background: rgba(0, 51, 102, 0.7);
            /* Applying the #003366 shade */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
            width: 350px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        h2 {
            margin-bottom: 30px;
            color: #fff;
            font-weight: 600;
        }

        .input-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .input-group label {
            display: block;
            color: #fff;
            margin-bottom: 8px;
            font-size: 16px;
            font-weight: 600;
        }

        .input-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 20px;
            background: #f0f0f0;
            font-size: 16px;
        }

        .options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .options label {
            display: flex;
            align-items: center;
            font-weight: 500;
        }

        .options a {
            color: #66ccff;
            text-decoration: none;
        }

        .options a:hover {
            text-decoration: underline;
        }

        .login-button {
            width: 100%;
            padding: 12px;
            background: #66ccff;
            color: #003366;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-size: 18px;
            font-weight: 600;
        }

        .login-button:hover {
            background: #55bbff;
        }

        .footer-links {
            margin-top: 30px;
            color: #66ccff;
            font-size: 14px;
        }

        .footer-links a {
            color: #66ccff;
            text-decoration: none;
            display: block;
            margin-top: 10px;
        }

        .footer-links a:hover {
            text-decoration: underline;
        }
    </style>

    <body>
        <div class="login-container">
            <div class="login-box">
                <h2>Register Admin</h2>
                <form action="/admin/register" method="post">
                    <div class="input-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" placeholder="Enter your username" required>
                    </div>
                    <div class="input-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your Email" required>
                    </div>
                    <div class="input-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    </div>
                    <button type="submit" class="login-button">Login</button>
                </form>
            </div>
        </div>
    </body>
